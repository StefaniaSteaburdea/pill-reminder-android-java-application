<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mybutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">26dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:backgroundTint">#550FA5</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="my_edit_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColorHint">#989898</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#989898</item>
        <item name="android:background">@drawable/card_text</item>
    </style>
    <style name="my_dropdown">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:textColorHint">#989898</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#989898</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/card_dropdown</item>
    </style>
    <style name="titlu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1F1B1B</item>
        <item name="android:textSize">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#381B88</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="text2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#381B88</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#9DA1E9</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="text4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#32006B</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>